{
  "name": "trpg-server",
  "version": "1.0.0",
  "description": "TRPG 标准服务端",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "cross-env DEBUG=trpg:* NODE_ENV=development npm run run:standard",
    "pro": "cross-env NODE_ENV=production npm run run:standard",
    "run:standard": "node standard.js",
    "packages:install": "sh packages/foreach.sh 'npm install'",
    "prettier:all": "prettier --write \"./**/*.{js,ts}\"",
    "db:migrate:generate": "./cli.js generate-migrate",
    "db:migrate:run": "runmigration --models-path ./db/models.js --migrations-path ./db/migrations",
    "playground": "node ./playground/playground.js --experimental-repl-await",
    "test": "jest --config=./test/jest.config.js --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TRPGEngine/Server.git"
  },
  "keywords": [
    "trpg"
  ],
  "author": "moonrailgun",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TRPGEngine/Server/issues"
  },
  "homepage": "https://github.com/TRPGEngine/Server#readme",
  "dependencies": {
    "config": "^3.1.0",
    "crypto-random-string": "^2.0.0",
    "debug": "^4.1.1",
    "execa": "^1.0.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.4",
    "@types/fs-extra": "^7.0.0",
    "@types/lodash": "^4.14.126",
    "@types/node-schedule": "^1.2.3",
    "cross-env": "^5.2.0",
    "jest": "^24.7.1",
    "prettier": "^1.16.4",
    "sequelize-auto-migrations": "github:TRPGEngine/sequelize-auto-migrations",
    "socket.io-client": "^2.2.0"
  }
}
