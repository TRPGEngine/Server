{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es6"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "trpg/*": ["types/*"],
      "lib/*": ["lib/*"],
      "packages/*": ["packages/*"],
      "test/*": ["test/*"]
    }
  },
  "include": ["./node_modules/@types/**/*", "packages/**/*", "lib/**/*", "test/**/*", "types/**/*"]
}
