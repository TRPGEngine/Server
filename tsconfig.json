{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es6"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "trpg/*": ["types/*"],
      "lib/*": ["lib/*"],
      "packages/*": ["packages/*"]
    }
  },
  "include": ["packages/**/*", "lib/**/*"]
}
